@model IEnumerable<MvcCoreEFMultiplesBBDD.Models.EmpleadoView>

@{
    ViewData["Title"] = "Index";
}

<h1>Empleados View SQL y Oracle</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Oficio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oficio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                <a asp-controller="Empleados" asp-action="Details"
                asp-route-id="@item.IdEmpleado" class="btn btn-success">
                    Details
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
